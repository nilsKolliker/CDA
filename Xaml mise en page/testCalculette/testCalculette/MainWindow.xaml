<Window x:Class="testCalculette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testCalculette"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Content="0" Grid.Column="1" Grid.Row="14"/>
        <Button Content="1" Grid.Column="1" Grid.Row="12"/>
        <Button Content="4" Grid.Column="1" Grid.Row="10"/>
        <Button Content="7" Grid.Column="1" Grid.Row="8"/>
        <Button Content="MC" Grid.Column="1" Grid.Row="6"/>
        <Button Content="." Grid.Column="3" Grid.Row="14"/>
        <Button Content="2" Grid.Column="3" Grid.Row="12"/>
        <Button Content="5" Grid.Column="3" Grid.Row="10"/>
        <Button Content="8" Grid.Column="3" Grid.Row="8"/>
        <Button Content="MR" Grid.Column="3" Grid.Row="6"/>
        <Button Content="%" Grid.Column="5" Grid.Row="14"/>
        <Button Content="3" Grid.Column="5" Grid.Row="12"/>
        <Button Content="6" Grid.Column="5" Grid.Row="10"/>
        <Button Content="9" Grid.Column="5" Grid.Row="8"/>
        <Button Content="M-" Grid.Column="5" Grid.Row="6"/>
        <Button Content="+" Grid.Column="7" Grid.Row="12" Grid.RowSpan="3"/>
        <Button Content="-" Grid.Column="7" Grid.Row="10"/>
        <Button Content="x" Grid.Column="7" Grid.Row="8"/>
        <Button Content="M+" Grid.Column="7" Grid.Row="6"/>
        <Button Content="OFF" Grid.Column="7" Grid.Row="4"/>
        <Button Content="=" Grid.Column="9" Grid.Row="14"/>
        <Button Content="+/-" Grid.Column="9" Grid.Row="12"/>
        <Button Content="√" Grid.Column="9" Grid.Row="10"/>
        <Button Content="÷" Grid.Column="9" Grid.Row="8"/>
        <Button Content="CE" Grid.Column="9" Grid.Row="6"/>
        <Button Content="ON/C" Grid.Column="9" Grid.Row="4"/>


    </Grid>
</Window>
