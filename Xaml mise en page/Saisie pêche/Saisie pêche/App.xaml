<Application x:Class="Saisie_pêche.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Saisie_pêche"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="policeEntete" Color="#FF190EFF"/>
        <SolidColorBrush x:Key="important" Color="Red"/>
        <LinearGradientBrush x:Key="fondEntete" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF93D2E0" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="fondRetractable" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF93D2E0" Offset="0"/>
            <GradientStop Color="White" Offset="0.1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="policeNormale" Color="Black"/>

    </Application.Resources>
</Application>
