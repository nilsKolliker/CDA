<Application x:Class="Gestion_de_produits.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gestion_de_produits"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="fondDApli" Color="#FFD4DAB0"/>
        <LinearGradientBrush x:Key="fondBouton" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF3ACBC5" Offset="0"/>
            <GradientStop Color="#FFD4DAB0" Offset="0.5"/>
            <GradientStop Color="#FF3ACBC5" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="fondList" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="gray" Offset="0.1"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
